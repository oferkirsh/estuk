<%= simple_form_for(@book, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :name,label: false, placeholder:"Book's Name",required: true %>
    <%= f.input :author,label: false, placeholder:"Author's name",required: true %>
    <%= f.input :description,label: false, placeholder:"Description",required: true, input_html: { rows:5} %>
    <%= f.input :price,label: false, placeholder:"Price",required: true %>
    <%= f.input :image %>
    <%= f.input :resource%>
    <%= f.input :availability,required: false,:label => false, :inline_label => "Availability" %>
    <%= f.button :submit, class: "btn btn-primary btn-block" %>

<% end %>
